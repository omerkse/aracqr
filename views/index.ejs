<!DOCTYPE html>
<html>
  <head>
    <!-- Head bölümü aynı kalıyor -->
    <title>Araç QR Kod Oluşturucu</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <!-- Stil aynı kalıyor -->
    <style>
      /* Önceki stiller aynen korunuyor */
      body {
        background-color: #f0f2f5;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }

      .container {
        max-width: 900px;
      }

      .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
      }

      .card-header {
        background: linear-gradient(135deg, #3498db, #2980b9);
        border-radius: 15px 15px 0 0 !important;
        padding: 1.5rem;
      }

      .card-header h3 {
        font-size: 1.5rem;
        font-weight: 600;
      }

      .card-body {
        padding: 2rem;
      }

      .form-label {
        font-weight: 500;
        color: #2c3e50;
        margin-bottom: 0.5rem;
      }

      .form-control {
        border-radius: 10px;
        padding: 0.75rem 1rem;
        border: 1px solid #e1e8ed;
        transition: all 0.3s ease;
      }

      .form-control:focus {
        box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
        border-color: #3498db;
      }

      .input-group {
        margin-bottom: 1.5rem;
      }

      .input-group-text {
        background-color: #f8f9fa;
        border: 1px solid #e1e8ed;
        border-radius: 10px 0 0 10px;
      }

      .btn-primary {
        background: linear-gradient(135deg, #3498db, #2980b9);
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
      }

      .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(52, 152, 219, 0.3);
      }

      .section-divider {
        border-top: 1px solid #e1e8ed;
        margin: 2rem 0;
        position: relative;
      }

      .section-divider span {
        background: #fff;
        padding: 0 1rem;
        color: #95a5a6;
        position: absolute;
        top: -10px;
        left: 50%;
        transform: translateX(-50%);
      }

      .input-icon {
        color: #7f8c8d;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5 mb-5">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header text-white">
              <h3 class="mb-0">
                <i class="fas fa-qrcode me-2"></i>
                Araç Bilgileri QR Kod Oluşturucu
              </h3>
            </div>
            <div class="card-body">
              <form action="/qrolustur" method="POST">
                <!-- Araç Bilgileri Bölümü -->
                <h5 class="text-primary mb-4">
                  <i class="fas fa-car me-2"></i>
                  Araç Bilgileri
                </h5>

                <div class="input-group mb-3">
                  <span class="input-group-text">
                    <i class="fas fa-car-side input-icon"></i>
                  </span>
                  <input
                    type="text"
                    name="plaka"
                    class="form-control"
                    placeholder="Plaka"
                    required
                  />
                </div>

                <div class="input-group mb-3">
                  <span class="input-group-text">
                    <i class="fas fa-car-alt input-icon"></i>
                  </span>
                  <input
                    type="text"
                    name="marka"
                    class="form-control"
                    placeholder="Marka(Örn:Citroen) Lütfen Doğru Girniz Yoksa Arç Logosu Yüklenmez"
                    required
                  />
                </div>

                <div class="input-group mb-3">
                  <span class="input-group-text">
                    <i class="fas fa-car input-icon"></i>
                  </span>
                  <input
                    type="text"
                    name="model"
                    class="form-control"
                    placeholder="Model (Örn: C Elysee)"
                    required
                  />
                </div>

                <div class="input-group mb-3">
                  <span class="input-group-text">
                    <i class="fas fa-calendar-alt input-icon"></i>
                  </span>
                  <input
                    type="text"
                    name="yil"
                    class="form-control"
                    placeholder="Yıl (Örn: 2015)"
                    required
                  />
                </div>

                <div class="section-divider">
                  <span>Kişisel Bilgiler</span>
                </div>

                <!-- Kişisel Bilgiler Bölümü -->
                <h5 class="text-primary mb-4">
                  <i class="fas fa-user me-2"></i>
                  Kişisel Bilgiler
                </h5>

                <div class="input-group mb-3">
                  <span class="input-group-text">
                    <i class="fas fa-user input-icon"></i>
                  </span>
                  <input
                    type="text"
                    name="sahipAdi"
                    class="form-control"
                    placeholder="Araç Sahibi Ad Soyad"
                    required
                  />
                </div>

                <div class="input-group mb-3">
                  <span class="input-group-text">
                    <i class="fas fa-phone input-icon"></i>
                  </span>
                  <input
                    type="tel"
                    name="telefon"
                    class="form-control"
                    placeholder="Telefon Numarası"
                    required
                  />
                </div>
                <div class="input-group mb-3">
                  <span class="input-group-text">
                    <i class="fas fa-tint input-icon"></i>
                  </span>
                  <input
                    type="text"
                    name="kanGrubu"
                    class="form-control"
                    placeholder="Kan Grubu (Örn: A Rh+)"
                    pattern="[ABO](?:\s*Rh[+-])"
                    title="Lütfen kan grubunu doğru giriniz"
                    required
                  />
                </div>

                <div class="section-divider">
                  <span>Ek Ulaşım Seçeneği</span>
                </div>

                <!-- Acil Durum Bilgileri -->
                <h5 class="text-primary mb-4">
                  <i class="fas fa-phone-volume me-2"></i>
                  Ek Ulaşım Seçeneği
                </h5>

                <div class="input-group mb-4">
                  <span class="input-group-text">
                    <i class="fas fa-phone-alt input-icon"></i>
                  </span>
                  <input
                    type="tel"
                    name="acilNumara"
                    class="form-control"
                    placeholder="Acil Durum Numarası"
                    required
                  />
                </div>

                <button type="submit" class="btn btn-primary w-100">
                  <i class="fas fa-qrcode me-2"></i>
                  QR Kod Oluştur
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
